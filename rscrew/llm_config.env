# RSCrew LLM Error Handling Configuration
# Copy this file to .env or set these as environment variables

# Maximum number of retry attempts for failed LLM calls
RSCREW_LLM_MAX_RETRIES=3

# Enable fallback responses when LLM calls consistently fail
RSCREW_LLM_FALLBACK=true

# Base delay for exponential backoff (seconds)
RSCREW_LLM_BASE_DELAY=1.0

# Maximum delay for exponential backoff (seconds)
RSCREW_LLM_MAX_DELAY=60.0

# Enable debug logging for LLM error handling
RSCREW_DEBUG=true

# Additional LLM Configuration (if needed)
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_MODEL_NAME=gpt-4
# OPENAI_API_BASE=https://api.openai.com/v1